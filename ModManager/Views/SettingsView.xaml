<UserControl x:Class="Imya.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Imya.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="5" Grid.Row="1">
            <Border CornerRadius="3" Background="{DynamicResource ComponentColorBrush}" BorderThickness="0">
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource IMYA_TEXT}"
                                   Text="{Binding TextManager[SETTINGS_LANGUAGE].Text}"
                                   VerticalAlignment="Center"
                                   Margin="5">
                        </TextBlock>
                        <ComboBox Grid.Column="1"
                                  Style="{StaticResource IMYA_COMBOBOX}"
                                  x:Name="LanguageSelection"
                                  VerticalAlignment="Top"
                                  SelectionChanged="RequestLanguageChange"
                                  ItemsSource="{Binding TextManager.Languages, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="5"
                                  MinHeight="30">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name.Text}"
                                               Style="{StaticResource IMYA_TEXT}"></TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding TextManager[SETTINGS_GAMEPATH].Text}"
                                   Style="{StaticResource IMYA_TEXT}"
                                   Margin="5"
                                   VerticalAlignment="Center" />
                        <Grid Grid.Column="1"
                              Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <TextBox Style="{StaticResource IMYA_TEXTBOX}"
                                     Background="{DynamicResource InteractiveComponentColorBrush}"
                                     Text="{Binding GameSetupManager.GAME_ROOT_PATH, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                     Margin="0,0,10,0"
                                     IsReadOnly="True" />
                            <Button Grid.Column="1"
                                    Style="{StaticResource IMYA_BUTTON}"
                                    Foreground="{DynamicResource TextColorBrush}"
                                    Content=". . ."
                                    HorizontalContentAlignment="Center"
                                    Margin="0"
                                    Click="GameRootPath_ButtonClick">
                            </Button>
                        </Grid>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource IMYA_TEXT}"
                                   Text="{Binding TextManager[SETTINGS_SHOWCONSOLE].Text}"
                                   VerticalAlignment="Center"
                                   Margin="5">
                        </TextBlock>
                        <CheckBox Margin="5"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Grid.Column="1"
                                  Foreground="{DynamicResource AccentColorBrush}"
                                  Style="{StaticResource IMYA_CHECKBOX}"
                                  IsChecked="{Binding ShowConsole, Mode=TwoWay}">
                        </CheckBox>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource IMYA_TEXT}"
                                   Text="{Binding TextManager[SETTINGS_DEVMODE].Text}"
                                   VerticalAlignment="Center"
                                   Margin="5"
                                   TextWrapping="Wrap">
                        </TextBlock>
                        <CheckBox Margin="5"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Grid.Column="1"
                                  Foreground="{DynamicResource AccentColorBrush}"
                                  Style="{StaticResource IMYA_CHECKBOX}"
                                  IsChecked="{Binding DeveloperMode, Mode=TwoWay}">
                        </CheckBox>
                    </Grid>
                </StackPanel>
                
            </Border>
        </StackPanel>
        
    </Grid>
</UserControl>
