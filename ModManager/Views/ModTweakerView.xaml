<UserControl x:Class="Imya.UI.Views.ModTweakerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Imya.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:Components="clr-namespace:Imya.UI.Components">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <Components:ModList Grid.Row="1"
                            x:Name="ModSelection"
                            Margin="0,5,5,5" />
        <Components:ModTweaker Grid.Row="1"
                               Grid.Column="1" 
                               x:Name="TweakerFileView"
                               Margin="5"/>
    </Grid>
</UserControl>
